<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_container"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:contentDescription="@string/shapes_text_content"
            android:id="@+id/repeatSound"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Repeat Sound"
            android:clickable="true"
            android:onClick="repeatSound"
            android:enabled="true" />

        <ImageView
            android:contentDescription="@string/shapes_text_content"
            android:id="@+id/status"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:clickable="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_container"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="1">
        <ImageView
            android:contentDescription="vegetables"
            android:id="@+id/vegetables"
            android:layout_width="100dp"
            android:layout_height="297dp"
            android:layout_margin="10dp"
            android:src="@drawable/vegetables_carrot"
            android:onClick="validate"
            android:clickable="true"
            android:layout_weight="0.28" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.10" />

        <ImageView
            android:contentDescription="animals"
            android:id="@+id/animalImage"
            android:layout_width="123dp"
            android:layout_height="183dp"
            android:layout_margin="10dp"
            android:onClick="validate"
            android:src="@drawable/animals_elephant"
            android:clickable="true" />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.10" />

        <ImageView
            android:contentDescription="fruits"
            android:id="@+id/fruits"
            android:layout_width="110dp"
            android:layout_height="161dp"
            android:layout_margin="10dp"
            android:src="@drawable/fruits_watermelon"
            android:onClick="validate"
            android:clickable="true" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.10" />

        <ImageView
            android:contentDescription="bodyparts"
            android:id="@+id/bodypartImage"
            android:layout_width="108dp"
            android:layout_height="98dp"
            android:layout_margin="10dp"
            android:src="@drawable/pb_face"
            android:onClick="validate"
            android:clickable="true" />

    </LinearLayout>
</LinearLayout>

